\ProvidesPackage{beamerthemetub}[2015/11/04 TUB-Layout for beamer]
\setbeamertemplate{page in head/foot}[framenumber]
\setbeamertemplate{page number in head/foot}[framenumber]
\logo{\includegraphics[height=0.8cm]{images/logo.png}\vspace{220pt}}


\definecolor{TUred}{HTML}{C50E1F}
\definecolor{TUgrey}{HTML}{717171}
\definecolor{TUblack}{HTML}{000000}


% Apply color theme
\mode<presentation>{
    \usecolortheme[named=TUred]{structure}
}

% Geometry adjustment
\geometry{left=0.95cm, right=0.95cm}

% Frametitle customization
\setbeamercolor{frametitle}{fg=TUred,bg=white}
\defbeamertemplate*{frametitle}{customized}[1][]{
    % Empty frametitle definition
}
\addtobeamertemplate{frametitle}{%
    \vspace{0pt}\hspace{0pt}\insertframetitle
}{}

% Table of content customization
\defbeamertemplate*{toc}{customized}[1][]{
    % Empty TOC definition
}
\addtobeamertemplate{toc}{%
    \addtobeamertemplate{section in toc}{TUBlayout}{\leftskip=0.5em\large\inserttocsection\par}
}{}

% Block customization
\setbeamercolor{block title}{fg=TUred,bg=white}
\setbeamercolor{block body}{fg=black,bg=white}

% Itemize customization
\setbeamertemplate{items}[square]
\setbeamercolor{itemize item}{fg=TUred}
\setbeamertemplate{itemize item}[triangle]

% Head/foot color settings
\setbeamercolor{section in head/foot}{fg=TUred,bg=white}
\setbeamercolor{subsection in head/foot}{fg=TUred,bg=white}
\setbeamercolor{author in head/foot}{parent=section in head/foot}
\setbeamercolor{title in head/foot}{parent=subsection in head/foot}


% Custom title page
\defbeamertemplate*{title page}{customized}[1][]{
    % Customized title page definition
    % Implementation depends on aspect ratio checks below
}


% Aspect ratio specific customizations
\AtBeginDocument{
    % 16:10
    \ifdim\beamer@paperwidth=16.00cm\relax%
        \ifdim\beamer@paperheight=10.00cm\relax%
            % Customizations for 16:10 aspect ratio
        \fi
    \fi
    % 16:9
    \ifdim\beamer@paperheight=9.00cm\relax%
        % Customizations for 16:9 aspect ratio
    \fi
    % 4:3
    \ifdim\beamer@paperwidth=12.80cm\relax%
        % Customizations for 4:3 aspect ratio
    \fi
}

\mode<all>
